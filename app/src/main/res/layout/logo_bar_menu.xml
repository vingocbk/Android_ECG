    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif_logo_back_menu"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:background="@mipmap/home" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifLogoCurrentMenu"
        android:layout_width="30dp"
        android:layout_marginLeft="5dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/gif_logo_back_menu"
        android:background="@mipmap/heart_health" />

    <TextView
        android:layout_toRightOf="@id/gifLogoCurrentMenu"
        android:gravity="center"
        android:text="ELCOM HEALTH CARE"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="@mipmap/notification" />

    <ImageView
        android:layout_centerInParent="true"
        android:background="@mipmap/logo_elcom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>